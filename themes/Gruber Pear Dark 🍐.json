	"tokenColors": [
		{
			"name": "Brackets",
			"scope": [
				"punctuation.brackets.curly"
			],
			"settings": {
				"foreground":  "#dddddd" 
				/* 
					There were some issues with macro definitions wronly
					coloring curly brackets
				*/
			}
		},
		{
			"name": "Comment",
			"scope": [
				//base (works with rust)
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground":  "#6b6b6b" 
			}
		},
		{
			"name": "Keywords",
			"scope": [
				//base (works with rust)
				"keyword.control",
				"keyword.other",
				"keyword.operator.new",
				"storage.modifier",
				"storage.type"
			],
			"settings": {
				"foreground":  "#deff0a" ,
				"fontStyle": "bold"
			}
		},
		{
			"name": "Operators, symbols and builtin types",
			"scope": [
				//base (works with rust)
				"keyword.operator",
				"keyword.operator.arithmetic",
				"keyword.operator.assignment",
				"keyword.operator.logical",
				"entity.name.type.primitive",
				"entity.name.type.numeric",
				//java additions
				"storage.type.primitive"
			],
			"settings": {
				"foreground":  "#deff0a" ,
				"fontStyle": ""
			}
		},
		{
			"name": "String",
			"scope": [
				"string"
			],
			"settings": {
				"foreground":  "#73c936" ,
			}
		},
		{
			"name": "Constants, numbers and internals",
			"scope": [
				//base (works with rust)
				"constant",
				//java additions
				"variable.other.constant"
			],
			"settings": {
				"foreground":  "#9e95c7" 
			}
		},
		{
			"name": "self and super",
			"scope": [
				//base (works with rust)
				"variable.language.self",
				"variable.language.super",
				//java additions
				"variable.language.this",
				//python additions
				"variable.language.special.self",
				"variable.parameter.function.language.special.self",
				"variable.language.special.cls",
				"variable.parameter.function.language.special.cls"
			],
			"settings": {
				"foreground":  "#73c936" ,
				"fontStyle": "italic"
			}
		},
		{
			"name":"Metaprogramming",
			"scope": [
				"meta.attribute",
				"meta.macro"
			],
			"settings":{
				"foreground": "#00d5ff" 
			}
		},
		{
			"name": "Types",
			"scope": [
				//General
				"entity.name.type",
				//java additions
				"entity.other.inherited-class",
				"storage.type.java",
				"storage.type.generic.java",
				"storage.type.object.array.java"
			],
			"settings": {
				"foreground":  "#dddddd" ,
				"fontStyle": "underline"
			}
		},
		/*
			[RUST-SPECIFIC MODIFICATIONS]
		*/
		{
			"name": "Rust metavariable",
			"scope": "variable.other.metavariable.name",
			"settings": {
